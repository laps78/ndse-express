<%- include("../port/layout-start", { title: book.title}) %> <%-
include("../elems/menu") %> <% console.log(book) %>
<div class="flex justify-between items-center mb-[30px]">
  <h1 class="text-3xl font-bold"><%= book.title %></h1>
  <h3><strong>Просмотров книги: </strong><span><%= count %></span></h3>
</div>
<a href="/books/update/<%= book.id %>">Редактировать</a>
<br />
<img
  class="md-3"
  src="/public/img/<%= book.fileCover %>"
  alt="Обложка книги '<%= book.title %>'"
/>
<br />
<span class="md-3">Авторы: <%= book.authors %></span>
<br />
<p class="md-3">Описание: <%= book.description %></p>
<br />
<span>В избранном: </span
><span><% if (book.favorite) { %>Да<% } else { %>Нет<% } %></span>
<br />
<a href="<%= book.fileName %>">Скачать в формате .txt</a>

<%- include("../port/layout-end") %>
