<% if (book.fileCover) {%>
<img src="<%=book.filecover %>" alt="Обложка книги" />
<%}%>

<form action="<%= action %>" method="POST" class="mt-5">
  <div class="form-group">
    <label for="inputTitle">Название</label>
    <input
      type="text"
      value="<%= book.title %>"
      name="title"
      class="form-control"
      id="inputTitle"
      required
    />
  </div>

  <div class="mb-3">
    <label for="inputAuthors">Авторы</label>
    <input
      type="text"
      value="<%= book.authors %>"
      name="authors"
      class="form-control"
      id="inputAuthors"
      required
    />
  </div>

  <div class="mb-3">
    <label for="textareaDescription" class="form-label">Описание книги</label>
    <textarea class="form-control" id="textareaDescription" rows="3"></textarea>
  </div>

  <div class="mb-3 form-check">
    <input
      name="favorite"
      type="checkbox"
      class="form-check-input"
      value="<% book.favorite %>"
      id="favorite"
    />
    <label class="form-check-label" for="favorite">В избранном</label>
  </div>

  <div class="mb-3">
    <div class="mb-3">
      <label for="fileCover" class="form-label">Выбрать обложку книги</label>
      <input
        name="fileCover"
        class="form-control"
        type="file"
        value="<% book.fileCover %>"
        id="fileCover"
        required
      />
    </div>
  </div>

  <div class="mb-3">
    <label class="form-label" for="fileName">
      <span class="form-file-text">Выбрать файл книги</span>
    </label>
    <input
      type="file"
      value="<%= book.fileName %>"
      name="fileName"
      class="form-control"
      id="fileName"
      required
    />
  </div>

  <div class="form-group text-right mt-3">
    <button type="submit" class="btn btn-primary">Сохранить</button>
  </div>
</form>
